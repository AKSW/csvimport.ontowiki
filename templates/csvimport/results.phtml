<script type="text/javascript">
    $(document).ready(function(){
        $("#save_template_btn").click(function(){
            // action url
            var url = staticUrlBase + 'csvimport/saveconfig';
            // template name
            var name = $("#template_name").val();
            console.log(name);
            console.log(url);
            console.log(dimensionString);
            // post
            $.post(url, {configName: name, configString:dimensionString, resourceUrl: url}, function(data){
                if(data.length < 1){
                    alert("Done!");
                }else{
                    alert("Error: "+data);
                }
            });
        });
        $("#close-results").click(function(){
            $("#import-options").remove();
        });
        $("#extract_triples_btn").click(function(){
            $("#import-options").html("<h1>Please wait..</h1>");
            $("#import-options").css("font-size", "10");
            $("#import-options").css("height", "500px");
            var done = false;
            var updater = window.setInterval(function(){
                logURL = staticUrlBase + "csvimport/importlog";
                $.ajax({
                    type: 'POST',
                    url: logURL,
                    async:true
                }).done(function(data){
                    var button = '<input type="button" id="visualize_import_btn" value="Show visualization"/><br/>';
                    $("#import-options").html('');
                    $("#import-options").append(button);
                    $("#import-options").append(data.replace(/\n/g, "<br/>"));

                    $("#visualize_import_btn").click(function() {
                        window.location.href = staticUrlBase + "cubeviz/";
                    });
                });

                if(done){
                    window.clearInterval(updater);
                };
            }, 1000);

            var success_function = function(){
                done = true;
            }
            $.ajax({
                type: 'POST',
                url: actionURL,
                data: {dimensions: dimensionString},
                success: success_function(),
                async:true
            });
        })
    })
</script>
<div id="import-options" style="width:400px;height:150px;padding:5px;align:center; background:white;position:absolute;left:40%;top:30%; border: 1px solid #900; overflow: auto;">
    <div align="center" style="height: 100%; vertical-align: middle; overflow: auto;">
        <b>Import options.</b><br/>
        <input type="text" id="template_name" value="Template Name" /><br/>
        <input type="button" id="save_template_btn" value="Save Template" onclick="" /><br/>
        <input type="button" id="extract_triples_btn" value="Extract triples" onclick="" /><br/>
        <div style="width:100%; text-align: right;"><a href="#" onclick="return false;" id="close-results">[x]</a></div>
    </div>
</div>

